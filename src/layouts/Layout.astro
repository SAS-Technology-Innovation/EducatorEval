---
// Main Layout for the Educational Platform
import '../styles/global.css';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Educational Employee Experience Platform" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="manifest" href="/manifest.json" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Merriweather:wght@300;400;700&display=swap" rel="stylesheet">
  </head>
  <body class="antialiased">
    <div id="app">
      <slot />
    </div>
    
    <style>
      :root {
        --sas-blue: #1e40af;
        --sas-blue-light: #3b82f6;
        --sas-blue-dark: #1e3a8a;
        --sas-green: #059669;
        --sas-green-light: #10b981;
        --sas-green-dark: #047857;
        --sas-gold: #d97706;
        --sas-gold-light: #f59e0b;
        --sas-gray: #64748b;
        --sas-gray-light: #94a3b8;
        --sas-gray-dark: #475569;
        --sas-background: #fafafa;
        --sas-white: #ffffff;
      }
      
      html, body, #app {
        height: 100%;
        margin: 0;
        padding: 0;
      }
      
      body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', 
                     Roboto, 'Helvetica Neue', Arial, sans-serif;
        background-color: var(--sas-background);
        color: #1f2937;
        line-height: 1.6;
      }
      
      .font-serif {
        font-family: 'Merriweather', Georgia, serif;
      }
    </style>
  </body>
</html>
