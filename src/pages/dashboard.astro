---
// Simple Dashboard with basic auth
import Layout from '../layouts/Layout.astro';
---

<Layout title="Dashboard - EducatorEval">
  <div id="dashboard-wrapper">
    <script type="module">
      import { initializeApp } from 'https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js';
      import { getAuth, onAuthStateChanged, signOut } from 'https://www.gstatic.com/firebasejs/10.7.1/firebase-auth.js';

      const firebaseConfig = {
        apiKey: "AIzaSyBEoqKHKKyLTr8FNnZpGWGVqBf39eVq-lE",
        authDomain: "educator-evaluations.firebaseapp.com",
        projectId: "educator-evaluations",
        storageBucket: "educator-evaluations.firebasestorage.app",
        messagingSenderId: "164055495572",
        appId: "1:164055495572:web:4e9e61b9be7f0b35b8ac75"
      };

      const app = initializeApp(firebaseConfig);
      const auth = getAuth(app);

      function showDashboard(user) {
        document.getElementById('dashboard-wrapper').innerHTML = `
          <div class="min-h-screen bg-gray-50">
            <!-- Header -->
            <header class="bg-white shadow-sm border-b border-gray-200">
              <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between items-center py-6">
                  <div class="flex items-center">
                    <h1 class="text-2xl font-bold text-gray-900">EducatorEval Dashboard</h1>
                  </div>
                  <div class="flex items-center space-x-4">
                    <span class="text-sm text-gray-600">Welcome, ${user.email}</span>
                    <button onclick="logout()" class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600">
                      Logout
                    </button>
                  </div>
                </div>
              </div>
            </header>

            <!-- Main Content -->
            <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
              <div class="px-4 py-6 sm:px-0">
                
                <!-- Authentication Status -->
                <div class="bg-green-50 border border-green-200 rounded-md p-4 mb-6">
                  <div class="flex">
                    <div class="flex-shrink-0">
                      <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                      </svg>
                    </div>
                    <div class="ml-3">
                      <p class="text-sm text-green-800">
                        ‚úÖ Authentication Working! User ${user.email} successfully logged in.
                      </p>
                    </div>
                  </div>
                </div>

                <!-- Navigation Grid -->
                <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3 mb-6">
                  <a href="/observations" class="bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow">
                    <div class="p-5">
                      <div class="flex items-center justify-center">
                        <div class="text-center">
                          <div class="mx-auto h-12 w-12 text-blue-500 mb-3">üìù</div>
                          <p class="text-lg font-medium text-gray-900">Observations</p>
                          <p class="text-sm text-gray-500">Create and view observations</p>
                        </div>
                      </div>
                    </div>
                  </a>

                  <a href="/profile" class="bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow">
                    <div class="p-5">
                      <div class="flex items-center justify-center">
                        <div class="text-center">
                          <div class="mx-auto h-12 w-12 text-green-500 mb-3">üë§</div>
                          <p class="text-lg font-medium text-gray-900">Profile</p>
                          <p class="text-sm text-gray-500">Manage your profile</p>
                        </div>
                      </div>
                    </div>
                  </a>

                  <a href="/settings" class="bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow">
                    <div class="p-5">
                      <div class="flex items-center justify-center">
                        <div class="text-center">
                          <div class="mx-auto h-12 w-12 text-purple-500 mb-3">‚öôÔ∏è</div>
                          <p class="text-lg font-medium text-gray-900">Settings</p>
                          <p class="text-sm text-gray-500">Configure preferences</p>
                        </div>
                      </div>
                    </div>
                  </a>
                </div>

                <!-- Recent Activity -->
                <div class="bg-white shadow overflow-hidden sm:rounded-md">
                  <div class="px-4 py-5 sm:p-6">
                    <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
                      Recent Activity
                    </h3>
                    <p class="text-gray-500">No recent activity to display.</p>
                  </div>
                </div>
              </div>
            </main>
          </div>
        `;
      }

      function showLoading() {
        document.getElementById('dashboard-wrapper').innerHTML = `
          <div class="flex items-center justify-center min-h-screen">
            <div class="text-center">
              <div class="animate-spin rounded-full h-32 w-32 border-b-2 border-blue-600 mx-auto"></div>
              <p class="mt-4 text-gray-600">Checking authentication...</p>
            </div>
          </div>
        `;
      }

      window.logout = async () => {
        try {
          await signOut(auth);
          window.location.href = '/login';
        } catch (error) {
          console.error('Error signing out:', error);
        }
      };

      // Initialize
      showLoading();
      
      onAuthStateChanged(auth, (user) => {
        if (user) {
          console.log('User authenticated:', user.email);
          showDashboard(user);
        } else {
          console.log('No user authenticated, redirecting to login');
          window.location.href = '/login';
        }
      });
    </script>
  </div>
</Layout>
