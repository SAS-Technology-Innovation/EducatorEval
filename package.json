{
  "name": "educator-eval-platform",
  "type": "module",
  "version": "2.0.0",
  "description": "Educational Employee Experience Platform - Firebase + Vite + React",
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "build": "vite build",
    "build:check": "npx tsc --noEmit && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "build:staging": "vite build --mode staging",
    "build:production": "vite build --mode production",
    "deploy": "npm run build && npx firebase deploy",
    "deploy:staging": "npm run build:staging && npx firebase deploy --only hosting:staging",
    "deploy:staging:hosting": "npm run build:staging && npx firebase deploy --only hosting:staging",
    "deploy:production": "npm run build:production && npx firebase deploy --only hosting:production",
    "deploy:production:hosting": "npm run build:production && npx firebase deploy --only hosting:production",
    "deploy:functions": "npx firebase deploy --only functions",
    "deploy:hosting": "npx firebase deploy --only hosting",
    "deploy:rules": "npx firebase deploy --only firestore:rules,storage:rules",
    "emulators": "npx firebase emulators:start",
    "emulators:export": "npx firebase emulators:export ./emulator-data",
    "emulators:import": "npx firebase emulators:start --import=./emulator-data",
    "dev:emulated": "concurrently \"npx firebase emulators:start\" \"vite\"",
    "seed:staging": "npx firebase use staging && npx tsx scripts/seedStaging.ts"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.0.0",
    "@tanstack/react-query-devtools": "^5.0.0",
    "firebase": "^10.14.1",
    "lucide-react": "^0.400.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^6.22.0",
    "recharts": "^2.12.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "dotenv": "^17.2.3",
    "firebase-admin": "^13.6.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.6",
    "typescript": "^5.0.0",
    "vite": "^5.1.0",
    "vitest": "^1.0.0"
  }
}
